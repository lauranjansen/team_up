<div class="large-4  medium-3 columns">
      <figure class="figure">
        <%= image_tag(@project.project_picture) %>
      </figure><!-- / FIGURE-->
    </div><!-- / COLUMN-->

<h1><%= @project.name %></h1>
<div class="row">
	<div class="medium-6 columns">
	<h3> Location </h3>
		<%= @project.description %>
	</div>
</div>
<div class="row">
	<div class="medium-6 columns">
	<h3> Status </h3>
		<%= @project.status %>
	</div>
</div>
<div class="row">
	<div class="medium-6 columns">
	<h3> Location </h3>
		<%= @project.location %>
	</div>
</div>
<div class="row">
	<div class="medium-6 columns">
	<h3> Creator </h3>
		 <%= link_to @project.owner.first_name, user_path(@project.owner) %>
	</div>
</div>

<h2> Open Positions </h2>

<div class="row">
	<div class="medium-6 columns">
		<%= render partial: 'position', collection: @project.positions %>
	</div>
</div>

<% if current_user == @project.owner %>
<h3> Position requests </h3>
<%= render partial: 'position_request', collection: @project.position_requests %>
<% end %>

<div class="row">
	<div class="small-12 medium-6 columns">
		<%= link_to "Back to Projects", projects_path, class: "button extend" %>
	</div>
</div>
