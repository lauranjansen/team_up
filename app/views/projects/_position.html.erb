<div class="small-12 medium-6 large-4 end columns">
  <% if position.user_id %>
    <div class="position-card">
      <h3> This position has been filled by</h3>
      <h4><%= link_to position.user.first_name, user_path(position.user) %>
      as a <%= position.role.name.downcase %></h4>
    </div>
  <% else %>
    <div class="apply position-card">
      <div class="position-info"><strong>Position:</strong> <br>
      <h3><%= position.role.name %></h3><br>
      <strong>Position Decription:</strong> <br>
      <%= position.description %>
      <%= form_tag position_requests_path, method: 'post', class: "position_request_form" do %>
      <%= hidden_field_tag 'position_request[position_id]', position.id %>
        <%= hidden_field_tag 'project_id', @project.id %>
      <% end %>
      </div>
    </div>
  <% end %>
</div>